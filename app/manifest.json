{
  	"name": "__MSG_appName__",
  	"description": "__MSG_appDescription__",
  	"version": "0.1.0",
  	"manifest_version": 2,
  	"default_locale": "en",
  	"permissions": [
        {"fileSystem": ["write", "retainEntries", "directory"]},
        "unlimitedStorage",
        {
            "mediaGalleries": [
                "read",
                "allAutoDetected"
            ]
        }
    ],
  	"icons": {
  		"128": "images/icon-128.png"
  	},
  	"app": {
  		"background": {
  			"scripts": [
  				"scripts/main.js",
  				"scripts/chromereload.js"
  			]
  		}
  	}
  }
